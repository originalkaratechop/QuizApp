<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp"/>
            <solid android:color="@color/colorBgFlat"/>
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp"/>
                <gradient
                    android:angle="0"
                    android:startColor="@color/colorBgLeft"
                    android:endColor="@color/colorBgRight"
                    android:type="linear"
                    />
            </shape>
        </clip>
    </item>

</layer-list>